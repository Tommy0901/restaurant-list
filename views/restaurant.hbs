<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto mb-5">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-2">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}" style="max-width: 600px;">
    </div>
    <div class="interaction-bar pt-3">
      <span>{{> message}}</span>
      <a href="/restaurant/{{restaurant.id}}/edit" class="interaction-icon">
        <i class="fa-solid fa-pen-to-square icon me-1"></i>編輯
      </a>
      <div>
        <input class="btn btn-primary btn-color btn-padding ms-3" type ="button" onclick="location.href='/restaurants'" value="上一頁"></input>
      </div>
      <form method="post" id="delete-restaurant">
        <button type="button" onclick="confirmDelete({{restaurant.id}})" class="btn btn-secondary btn-padding ms-3"><i class="fa-solid fa-trash-can fa-sm"></i> 刪除</button>
      </form>
    </div>
  </div>
</div>
