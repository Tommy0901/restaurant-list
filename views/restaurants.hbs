<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants"> <!--表單提交時會送往的位址-->
        <h4 class="mb-4">尋找餐廳：</h4>
        
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" style="box-shadow: none;" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants as |restaurant|}}
        <div class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{restaurant.image}}" alt="{{restaurant.name}}" height="240">
            <div class="card-body p-3">
              <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                <h6 class="card-title mb-1">{{restaurant.name}}</h6>
                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{restaurant.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{restaurant.category}}
              </div>
              <div class="interaction-bar pt-2">
                <a href="/restaurant/{{restaurant.id}}/edit" class="interaction-icon me-3">
                  <i class="fa-solid fa-pen-to-square me-1"></i>編輯
                </a>
                <a href="/restaurant/{{restaurant.id}}" class="interaction-icon me-3">
                  <i class="fa-solid fa-circle-info me-1"></i>詳細
                </a>
                <form action="/restaurant/{{restaurant.id}}?_method=delete" method="post" id="delete-restaurant">
                  <button type="submit" class="btn btn-secondary btn-padding"><i class="fa-solid fa-trash-can fa-sm"></i> 刪除</button>
                </form>
              </div>
            </div>
          </div>
          
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>